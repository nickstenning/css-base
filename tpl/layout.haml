!!! 1.1
%html{ "xml:lang" => "en", :xmlns => "http://www.w3.org/1999/xhtml" }
  %head
    %title
      Test Page 1
    %link{ :href => "screen.css", :rel => "stylesheet", :media => "screen, projection, print", :type => "text/css" }
    /[if IE]
      %link{ :href => "ie.css", :rel => "stylesheet", :media => "screen, projection, print", :type => "text/css" }
    %link{ :href => "print.css", :rel => "stylesheet", :media => "print", :type => "text/css" }
       
    %style{ :type => "text/css" }
      :sass
        @import sass/layout/2.sass
        @import sass/base/colours.sass
        
        #header
          :background = !bg_red_light
        #menu
          :background = !bg_yellow_light
        #content
          :background = !bg_blue_light
        #sub-section
          :background = !bg_green_light
        #footer
          :background = !bg_red_light
      
  %body
    #header
      %h1 header
    #menu
      %h1 menu
    #content
      %h1 This is a test page
    
      %p.success An example success flash.
      %p.notice An example notice flash.
      %p.error An example error flash.
    
