      %h3 Some buttons (heading 3)
    
      %p.buttons
        %button.positive{ :type => "submit" }
          %img{ :src => "images/icons/tick.png", :alt => "" } 
          Save

        %a{ :href => "#" }
          %img{ :src => "images/icons/textfield_key.png", :alt => "" } 
          Change Password

        %a.negative{ :href => "#" }
          %img{ :src => "images/icons/cross.png", :alt => "" }
          Cancel

        %a.positive{ :href => "#" }
          %img{ :src => "images/icons/cake.png", :alt => "" }
          Cake!
      
